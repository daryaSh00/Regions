@model Regions.Web.ViewModel.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">خوش آمدید به سامانه مدیریت مناطق</h1>
        <p class="lead">نمایش و مدیریت استان‌ها، شهرها و نواحی به صورت ساده و کارآمد</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">تعداد استان‌ها</h5>
                    <p class="card-text display-6">@Model.ProvinceCount</p>
                    <a asp-controller="Province" asp-action="Index" class="btn btn-light btn-sm">مشاهده</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">تعداد شهرها</h5>
                    <p class="card-text display-6">@Model.CityCount</p>
                    <a asp-controller="District" asp-action="Index" class="btn btn-light btn-sm">مشاهده نواحی</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">تعداد نواحی</h5>
                    <p class="card-text display-6">@Model.DistrictCount</p>
                    <a asp-controller="District" asp-action="Index" class="btn btn-light btn-sm">مشاهده</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">آخرین استان‌ها</h4>
        </div>
        <div class="card-body">
            <table id="recentProvinces" class="table table-striped table-hover w-100">
                <thead class="table-dark">
                    <tr>
                        <th>نام استان</th>
                        <th>تعداد شهرها</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var province in Model.RecentProvinces)
                    {
                        <tr>
                            <td>@province.Name</td>
                            <td>@province.Cities.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/landingPage.js"></script>
}